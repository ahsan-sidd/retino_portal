---
import { Icon } from 'astro-icon/components';
import { getHomePermalink } from '~/utils/permalinks';

interface Link {
  text?: string;
  href?: string;
  ariaLabel?: string;
  icon?: string;
}

export interface Props {
  socialLinks: Array<Link>;
}

const socialLinks = [
  { ariaLabel: "Instagram", href: "https://instagram.com/chillsup", icon: "mdi:instagram" },
  { ariaLabel: "GitHub", href: "https://github.com/mansoorprogamer", icon: "mdi:github" },
  { ariaLabel: "LinkedIn", href: "https://linkedin.com/in/your-profile", icon: "mdi:linkedin" }
];
---

<footer class="relative border-t border-gray-200 dark:border-slate-800 not-prose">
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 py-8 md:py-12">
    
    <!-- Branding -->
    <div class="text-xl font-bold">
      <a href={getHomePermalink()}>Chillsup.co</a>
    </div>

    <!-- Navigation Links -->
    <ul class="flex space-x-6 mt-4">
      <li><a class="hover:underline" href="/portfolio">Portfolio</a></li>
      <li><a class="hover:underline" href="/contact">Contact</a></li>
    </ul>

    <!-- Social Links -->
    <div class="flex space-x-4 mt-6">
      {socialLinks.map(({ ariaLabel, href, icon }) => (
        <a href={href} aria-label={ariaLabel} class="hover:text-gray-700 dark:hover:text-white">
          <Icon name={icon} class="w-6 h-6" />
        </a>
      ))}
    </div>

  </div>
</footer>
