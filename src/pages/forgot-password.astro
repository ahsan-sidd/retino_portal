---
import { useState } from 'preact/hooks';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Forgot Password | RetinoPortal',
  ignoreTitleTemplate: false,
};

const handleForgotPassword = (event) => {
  event.preventDefault();
  console.log("Reset Password button clicked!");
  // Here, you can integrate API logic for password reset.
};
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md">
      
      <h2 class="text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">Forgot Password?</h2>
      
      <p class="text-gray-600 dark:text-gray-400 text-center mb-4">
        Enter your email, and weâ€™ll send you a link to reset your password.
      </p>

      <form onSubmit={handleForgotPassword} class="space-y-6">
        
        <!-- Email Input -->
        <div>
          <label for="email" class="block text-gray-700 dark:text-gray-300 font-medium">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            required 
            class="w-full px-4 py-3 mt-1 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none dark:bg-gray-700 dark:text-white transition"
            placeholder="Enter your email"
          />
        </div>

        <!-- Reset Password Button -->
        <button 
          type="submit" 
          class="w-full bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-accent-dark hover:scale-[1.03] transition-transform"
        >
          Reset Password
        </button>
      </form>

      <!-- Back to Login Link -->
      <p class="text-center text-gray-600 dark:text-gray-400 mt-6">
        Remember your password? <a href="/login" class="text-accent font-semibold hover:underline">Login</a>
      </p>
    </div>
  </section>
</Layout>
