---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Locate Nearby Hospitals | RetinoPortal',
  ignoreTitleTemplate: false,
};
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md">
      
      <h2 class="text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">Locate Nearby Retinopathy Hospitals</h2>
      
      <p class="text-gray-600 dark:text-gray-400 text-center mb-4">
        Find retinopathy hospitals near you for immediate assistance. Allow location access or enter your location manually.
      </p>
      
      <form id="locationForm" class="space-y-6">
        <!-- Location Input -->
        <div>
          <label for="location" class="block text-gray-700 dark:text-gray-300 font-medium">Enter Your Location</label>
          <input 
            type="text" 
            id="location" 
            name="location" 
            class="w-full px-4 py-3 mt-1 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none dark:bg-gray-700 dark:text-white transition"
            placeholder="Enter city or area"
          />
        </div>

        <!-- Find Button -->
        <button 
          type="submit" 
          class="w-full bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-accent-dark hover:scale-[1.03] transition-transform"
        >
          Find
        </button>
      </form>
    </div>
  </section>

  <!-- Results Popup -->
  <div id="popup" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg max-w-lg w-full">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Nearby Retinopathy Hospitals</h3>
      <div id="results" class="space-y-3 text-gray-700 dark:text-gray-300"></div>
      <button id="closePopup" class="mt-4 w-full bg-red-500 text-white font-semibold py-2 rounded-lg hover:bg-red-600">
        Close
      </button>
    </div>
  </div>

  <!-- JavaScript Logic -->
  <script>
    const googleAPIKey = "YOUR_GOOGLE_PLACES_API_KEY"; // Replace with your Google Places API Key

    document.getElementById("locationForm").addEventListener("submit", function(event) {
      event.preventDefault();
      const locationInput = document.getElementById("location").value.trim();
      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const { latitude, longitude } = position.coords;
            fetchHospitals(latitude, longitude);
          },
          () => {
            if (locationInput) {
              geocodeLocation(locationInput);
            } else {
              showError("Location access denied. Please enter your location manually.");
            }
          }
        );
      } else {
        if (locationInput) {
          geocodeLocation(locationInput);
        } else {
          showError("Geolocation is not supported in your browser. Please enter your location manually.");
        }
      }
    });

    function geocodeLocation(address) {
      const geocodeUrl = `https://maps.googleapis.com/maps/api/geocode/json?address=${encodeURIComponent(address)}&key=${googleAPIKey}`;
      fetch(geocodeUrl)
        .then(response => response.json())
        .then(data => {
          if (data.status === "OK") {
            const { lat, lng } = data.results[0].geometry.location;
            fetchHospitals(lat, lng);
          } else {
            showError("Invalid location. Please try again.");
          }
        })
        .catch(() => showError("Error fetching location data."));
    }

    function fetchHospitals(lat, lng) {
      const placesUrl = `https://maps.googleapis.com/maps/api/place/nearbysearch/json?location=${lat},${lng}&radius=5000&type=hospital&keyword=retinopathy&key=${googleAPIKey}`;
      
      fetch(placesUrl)
        .then(response => response.json())
        .then(data => {
          if (data.status === "OK" && data.results.length > 0) {
            displayHospitals(data.results);
          } else {
            showError("No hospitals found near your location.");
          }
        })
        .catch(() => showError("Error fetching hospital data."));
    }

    function displayHospitals(hospitals) {
      const resultsDiv = document.getElementById("results");
      resultsDiv.innerHTML = hospitals
        .slice(0, 5) // Show top 5 results
        .map(hospital => `
          <div class="p-3 border border-gray-300 dark:border-gray-600 rounded-lg">
            <p class="font-semibold">${hospital.name}</p>
            <p class="text-sm">${hospital.vicinity}</p>
            <a href="https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(hospital.name)}" target="_blank" class="text-blue-500 hover:underline">View on Google Maps</a>
          </div>
        `)
        .join("");

      document.getElementById("popup").classList.remove("hidden");
    }

    function showError(message) {
      document.getElementById("results").innerHTML = `<p class="text-red-500">${message}</p>`;
      document.getElementById("popup").classList.remove("hidden");
    }

    document.getElementById("closePopup").addEventListener("click", function () {
      document.getElementById("popup").classList.add("hidden");
    });
  </script>
</Layout>
