---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Locate Nearby Hospitals | RetinoPortal',
  ignoreTitleTemplate: false,
};
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md">
      
      <h2 class="text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">Locate Nearby Retinopathy Hospitals</h2>
      
      <p class="text-gray-600 dark:text-gray-400 text-center mb-4">
        Find retinopathy hospitals near you for immediate assistance. Allow location access or enter your location manually.
      </p>
      
      <form id="locationForm" class="space-y-6">
        
        <!-- Location Input -->
        <div>
          <label for="location" class="block text-gray-700 dark:text-gray-300 font-medium">Enter Your Location</label>
          <input 
            type="text" 
            id="location" 
            name="location" 
            class="w-full px-4 py-3 mt-1 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none dark:bg-gray-700 dark:text-white transition"
            placeholder="Enter city or area"
          />
        </div>

        <!-- Find Button -->
        <button 
          type="submit" 
          class="w-full bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-accent-dark hover:scale-[1.03] transition-transform"
        >
          Find
        </button>
      </form>

      <!-- Search Results -->
      <div id="results" class="mt-6 text-center text-gray-700 dark:text-gray-300"></div>
    </div>
  </section>

  <!-- Popup Modal -->
  <div id="popup" class="hidden fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center p-4">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg max-w-lg w-full">
      <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-white">Nearby Hospitals</h3>
      <div id="hospitalList" class="space-y-3"></div>
      <button id="closePopup" class="mt-4 w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600">Close</button>
    </div>
  </div>

  <!-- JavaScript Logic -->
  <script>
    document.getElementById("locationForm").addEventListener("submit", function(event) {
      event.preventDefault();
      const locationInput = document.getElementById("location").value.trim();
      const resultsDiv = document.getElementById("results");

      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const { latitude, longitude } = position.coords;
            fetchHospitals(latitude, longitude);
          },
          () => {
            if (locationInput) {
              geocodeAddress(locationInput);
            } else {
              resultsDiv.innerHTML = "<p class='text-red-500'>Location access denied. Please enter your location manually.</p>";
            }
          }
        );
      } else {
        if (locationInput) {
          geocodeAddress(locationInput);
        } else {
          resultsDiv.innerHTML = "<p class='text-red-500'>Geolocation is not supported in your browser. Please enter your location manually.</p>";
        }
      }
    });

    function geocodeAddress(address) {
      const apiKey = "YOUR_GOOGLE_API_KEY";  // Replace with your Google API key
      fetch(`https://maps.googleapis.com/maps/api/geocode/json?address=${encodeURIComponent(address)}&key=${apiKey}`)
        .then(response => response.json())
        .then(data => {
          if (data.status === "OK") {
            const { lat, lng } = data.results[0].geometry.location;
            fetchHospitals(lat, lng);
          } else {
            document.getElementById("results").innerHTML = "<p class='text-red-500'>Invalid location. Please try again.</p>";
          }
        })
        .catch(() => {
          document.getElementById("results").innerHTML = "<p class='text-red-500'>Failed to fetch location. Try again.</p>";
        });
    }

    function fetchHospitals(lat, lng) {
      const apiKey = "YOUR_GOOGLE_API_KEY";  // Replace with your Google API key
      const placesUrl = `https://maps.googleapis.com/maps/api/place/nearbysearch/json?location=${lat},${lng}&radius=5000&type=hospital&keyword=retinopathy&key=${apiKey}`;

      fetch(placesUrl)
        .then(response => response.json())
        .then(data => {
          if (data.status === "OK" && data.results.length > 0) {
            showPopup(data.results);
          } else {
            document.getElementById("results").innerHTML = "<p class='text-red-500'>No hospitals found nearby.</p>";
          }
        })
        .catch(() => {
          document.getElementById("results").innerHTML = "<p class='text-red-500'>Failed to fetch hospital data.</p>";
        });
    }

    function showPopup(hospitals) {
      const popup = document.getElementById("popup");
      const hospitalList = document.getElementById("hospitalList");
      hospitalList.innerHTML = "";

      hospitals.slice(0, 5).forEach(hospital => {
        const hospitalElement = document.createElement("div");
        hospitalElement.classList.add("p-2", "border", "rounded", "bg-gray-100", "dark:bg-gray-700");

        hospitalElement.innerHTML = `
          <p class="font-bold text-gray-900 dark:text-white">${hospital.name}</p>
          <p class="text-sm text-gray-600 dark:text-gray-400">Rating: ${hospital.rating || "N/A"}</p>
          <a href="https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(hospital.name)}&query_place_id=${hospital.place_id}" target="_blank" class="text-blue-600 dark:text-blue-400 hover:underline">
            View on Google Maps
          </a>
        `;

        hospitalList.appendChild(hospitalElement);
      });

      popup.classList.remove("hidden");
    }

    document.getElementById("closePopup").addEventListener("click", function() {
      document.getElementById("popup").classList.add("hidden");
    });
  </script>
</Layout>
