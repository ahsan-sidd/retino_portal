---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Locate Nearby Hospitals | RetinoPortal',
  ignoreTitleTemplate: false,
};
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md">
      
      <h2 class="text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">Locate Nearby Retinopathy Hospitals</h2>
      
      <p class="text-gray-600 dark:text-gray-400 text-center mb-4">
        Find retinopathy hospitals near you. Allow location access or enter your location manually.
      </p>
      
      <form id="locationForm" class="space-y-6">
        
        <!-- Location Input -->
        <div>
          <label for="location" class="block text-gray-700 dark:text-gray-300 font-medium">Enter Your Location</label>
          <input 
            type="text" 
            id="location" 
            name="location" 
            class="w-full px-4 py-3 mt-1 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none dark:bg-gray-700 dark:text-white transition"
            placeholder="Enter city or area (if location access denied)"
          />
        </div>

        <!-- Find Button -->
        <button 
          type="submit" 
          class="w-full bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-accent-dark hover:scale-[1.03] transition-transform"
        >
          Find
        </button>
      </form>

      <!-- Results Section -->
      <div id="results" class="mt-6 space-y-3"></div>

      <!-- Back Link -->
      <p class="text-center text-gray-600 dark:text-gray-400 mt-6">
        Back to <a href="/report" class="text-accent font-semibold hover:underline">Report</a>
      </p>
    </div>
  </section>

  <!-- Script for Geolocation and Google Search -->
  <script>
    document.getElementById("locationForm").addEventListener("submit", function(event) {
      event.preventDefault();
      
      const resultsDiv = document.getElementById("results");
      resultsDiv.innerHTML = "<p class='text-gray-500'>Searching...</p>";

      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(
          (position) => {
            const lat = position.coords.latitude;
            const lon = position.coords.longitude;
            searchHospitals(\`lat \${lat}, lon \${lon}\`);
          },
          () => {
            // If user denies location, fall back to manual input
            const userInput = document.getElementById("location").value.trim();
            if (userInput) {
              searchHospitals(userInput);
            } else {
              resultsDiv.innerHTML = "<p class='text-red-500'>Location access denied. Please enter a location.</p>";
            }
          }
        );
      } else {
        resultsDiv.innerHTML = "<p class='text-red-500'>Geolocation is not supported by your browser.</p>";
      }
    });

    function searchHospitals(query) {
      const googleSearchUrl = \`https://www.google.com/maps/search/retinopathy+hospitals+near+\${encodeURIComponent(query)}\`;
      const resultsDiv = document.getElementById("results");
      resultsDiv.innerHTML = \`
        <p class='text-gray-600 dark:text-gray-400'>Results:</p>
        <a href="\${googleSearchUrl}" target="_blank" class="text-accent font-semibold hover:underline">
          View Nearby Retinopathy Hospitals
        </a>
      \`;
    }
  </script>
</Layout>
