---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Test History - RetinoPortal',
};

// Sample data - this would be replaced with actual data from your database
const testResults = [
  {
    id: 1,
    imageSrc: '~/assets/images/sample_retina1.jpg',
    imageAlt: 'Retina Scan 1',
    codeStage: 'DG 2',
    dateUploaded: 'April 18, 2025',
    details: 'Patient ID: 23401, Left eye'
  },
  {
    id: 2,
    imageSrc: '~/assets/images/sample_retina2.jpg',
    imageAlt: 'Retina Scan 2',
    codeStage: 'DG 1',
    dateUploaded: 'April 17, 2025',
    details: 'Patient ID: 23401, Right eye'
  },
  {
    id: 3,
    imageSrc: '~/assets/images/sample_retina3.jpg',
    imageAlt: 'Retina Scan 3',
    codeStage: 'DG 0',
    dateUploaded: 'April 15, 2025',
    details: 'Patient ID: 23399, Right eye'
  }
];
---

<Layout metadata={metadata}>
  <section class="px-4 py-8 sm:px-6 mx-auto lg:px-8 max-w-6xl">
    <div class="my-8">
      <h2 class="text-xl font-bold text-gray-700 mb-6">Test Results:</h2>
      
      {testResults.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="min-w-full bg-white rounded-lg overflow-hidden shadow-md">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Code/Stage</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Uploaded</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Other Details</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {testResults.map((result) => (
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-16 w-20 bg-purple-50 rounded overflow-hidden">
                        <img src={result.imageSrc} alt={result.imageAlt} class="h-full w-full object-cover" />
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">
                      {result.codeStage}
                    </span>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {result.dateUploaded}
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    {result.details}
                  </td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="text-center py-16 text-gray-500">
          No test results found.
        </div>
      )}
    </div>

    <div class="mt-12 text-center">
      <a href="/uploadastro" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-3 px-6 rounded inline-block transition-colors">
        Test Another Input
      </a>
    </div>
  </section>
</Layout>

<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }
  
  th, td {
    padding: 12px 15px;
    text-align: left;
  }
  
  tbody tr:hover {
    background-color: #f5f7ff;
  }
</style>
