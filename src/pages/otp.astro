---
import { useState, useEffect } from 'preact/hooks';

const [otp, setOtp] = useState("");
const [timer, setTimer] = useState(30); // Countdown starts from 30 seconds
const [canResend, setCanResend] = useState(false); // Controls Resend OTP button

// Decrease the timer every second
useEffect(() => {
  if (timer > 0) {
    const interval = setInterval(() => setTimer((prev) => prev - 1), 1000);
    return () => clearInterval(interval);
  } else {
    setCanResend(true); // Enable Resend OTP button when timer reaches 0
  }
}, [timer]);

const handleVerifyOTP = (event) => {
  event.preventDefault();
  console.log("OTP Verified:", otp);
  // Here, you can call an API to verify the OTP
};

const handleResendOTP = () => {
  console.log("Resend OTP clicked!");
  setTimer(30); // Restart timer
  setCanResend(false); // Disable Resend OTP until countdown completes
  // Call API to resend OTP here
};
---

<head>
  <title>OTP Verification | RetinoPortal</title>
</head>

<section class="min-h-screen flex items-center justify-center bg-gray-100 dark:bg-gray-900">
  <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md w-full max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-800 dark:text-white mb-6">OTP Verification</h2>
    
    <p class="text-gray-600 dark:text-gray-400 text-center mb-4">
      Enter the 6-digit OTP sent to your email.
    </p>

    <form onSubmit={handleVerifyOTP} class="space-y-4">
      <!-- OTP Input -->
      <div>
        <label for="otp" class="block text-gray-700 dark:text-gray-300">Enter OTP</label>
        <input 
          type="text" 
          id="otp" 
          name="otp" 
          value={otp} 
          onInput={(e) => setOtp(e.target.value)}
          required 
          maxlength="6"
          pattern="[0-9]{6}"
          class="w-full px-4 py-2 border rounded-md focus:ring focus:ring-blue-300 dark:bg-gray-700 dark:text-white text-center tracking-widest text-lg"
          placeholder="123456"
        />
      </div>

      <!-- Verify OTP Button -->
      <button 
        type="submit" 
        class="w-full bg-blue-500 text-white font-bold py-2 rounded-md hover:bg-blue-600 transition"
      >
        Verify OTP
      </button>
    </form>

    <!-- Resend OTP Countdown -->
    <p class="text-center text-gray-600 dark:text-gray-400 mt-4">
      {canResend ? (
        <button onclick={handleResendOTP} class="text-blue-500 hover:underline">
          Resend OTP
        </button>
      ) : (
        `Resend OTP in ${timer}s`
      )}
    </p>

    <!-- Back to Login Link -->
    <p class="text-center text-gray-600 dark:text-gray-400 mt-2">
      Back to <a href="/login" class="text-blue-500 hover:underline">Login</a>
    </p>
  </div>
</section>
