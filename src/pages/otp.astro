---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Verify OTP | RetinoPortal',
  ignoreTitleTemplate: false,
};

const handleOTPSubmit = (event) => {
  event.preventDefault();
  console.log("OTP submitted!");
  window.location.href = "/dashboard"; // Redirect to dashboard after OTP verification
};
---

<Layout metadata={metadata}>
  <section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-50 to-gray-200 dark:from-gray-900 dark:to-gray-800">
    <div class="bg-white dark:bg-gray-800 p-8 md:p-10 rounded-xl shadow-lg w-full max-w-md">
      
      <h2 class="text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">Enter OTP</h2>
      
      <p class="text-center text-gray-600 dark:text-gray-400 mb-4">
        We have sent a 6-digit OTP to your email. Please enter it below.
      </p>

      <form onSubmit={handleOTPSubmit} class="space-y-6">
        
        <!-- OTP Input -->
        <div>
          <label for="otp" class="block text-gray-700 dark:text-gray-300 font-medium">OTP Code</label>
          <input 
            type="text" 
            id="otp" 
            name="otp" 
            required 
            maxlength="6"
            pattern="\d{6}"
            class="w-full px-4 py-3 mt-1 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-accent focus:outline-none dark:bg-gray-700 dark:text-white transition text-center tracking-widest"
            placeholder="Enter OTP"
          />
        </div>

        <!-- Verify OTP Button -->
        <button 
          type="submit" 
          class="w-full bg-accent text-white font-semibold py-3 rounded-lg shadow-md hover:bg-accent-dark hover:scale-[1.03] transition-transform"
        >
          Verify OTP
        </button>
      </form>

      <!-- Resend OTP Link -->
      <p class="text-center text-gray-600 dark:text-gray-400 mt-6">
        Didn't receive the code? <a href="#" class="text-accent font-semibold hover:underline">Resend OTP</a>
      </p>
    </div>
  </section>
</Layout>
