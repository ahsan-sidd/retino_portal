---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget (Updated) ******************* -->
  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'About us Hero Image',
    }}
  >
    <Fragment slot="title" class="text-center text-2xl font-semibold">
      Welcome to Chillsup
    </Fragment>
    <Fragment slot="subtitle" class="text-center text-lg">
      Discover who we are, what we do, and how we can elevate your online experience.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->
  <Stats
    title="Statistics About Us"
    stats={[
      { title: 'Offices', amount: '4' },
      { title: 'Employees', amount: '248' },
      { title: 'Templates', amount: '12' },
      { title: 'Awards', amount: '24' },
    ]}
  />

  <!-- Features3 Widget (Updated) ************** -->
  <Features3
    title="Our Templates"
    subtitle="We provide a variety of templates designed to help you create amazing online experiences."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Educational',
        description:
          'Designs to enhance learning environments, making education more accessible and engaging.',
        icon: 'tabler:template',
      },
      {
        title: 'Interior Design',
        description:
          'Templates for showcasing interior design projects and creative visual presentations.',
        icon: 'tabler:template',
      },
      {
        title: 'Photography',
        description:
          'Professional templates for photographers looking to showcase their portfolio and work.',
        icon: 'tabler:template',
      },
    ]}
  />

  <!-- Features3 Widget (Updated) ************** -->
  <Features3
    columns={3}
    isAfterContent={true}
    items={[
      {
        title: 'E-commerce',
        description:
          'Easily create online stores and manage products with our e-commerce-ready templates.',
        icon: 'tabler:template',
      },
      {
        title: 'Blog',
        description:
          'Templates perfect for blogging, with easy-to-use layouts and design options.',
        icon: 'tabler:template',
      },
      {
        title: 'Business',
        description:
          'Streamlined business templates to help you showcase your companyâ€™s products and services.',
        icon: 'tabler:template',
      },
      {
        title: 'Branding',
        description:
          'Get started with creative branding templates that communicate your business identity.',
        icon: 'tabler:template',
      },
      {
        title: 'Medical',
        description:
          'Medical templates for healthcare professionals to create informative, accessible websites.',
        icon: 'tabler:template',
      },
      {
        title: 'Fashion Design',
        description:
          'Showcase your fashion designs with templates that highlight creativity and style.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1504384308090-c894fdcc538d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Colorful Image',
    }}
  />

  <!-- Steps2 Widget (Updated) ****************** -->
  <Steps2
    title="Our Values"
    subtitle="We believe in delivering exceptional results with integrity, passion, and a customer-first approach."
    items={[
      {
        title: 'Customer-Centric Approach',
        description:
          'We prioritize your needs and strive to exceed your expectations in every interaction.',
      },
      {
        title: 'Constant Improvement',
        description:
          'We are always evolving and seeking ways to improve our services and products.',
      },
      {
        title: 'Ethical Practices',
        description:
          'We operate with integrity and transparency, ensuring our clients receive the best possible solutions.',
      },
    ]}
  />

  <!-- Steps2 Widget (Updated) ****************** -->
  <Steps2
    title="Achievements"
    subtitle="We have received numerous awards and recognition for our commitment to excellence."
    isReversed={true}
    callToAction={{
      text: 'See more',
      href: '/',
    }}
    items={[
      {
        title: 'Global Reach',
        description: 'We have served clients across the globe, helping them succeed in their online endeavors.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive Customer Feedback',
        description:
          'Our clients consistently praise our services, noting our attention to detail and dedication.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Industry Recognition',
        description:
          'We are proud to be recognized as experts in the industry, with several accolades to our name.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Contact Us Section with Email and Upload Button ************** -->
  <Features2
    title="Contact Us"
    tagline="Get in touch"
    columns={2}
    items={[
      {
        title: 'Email Us',
        description:
          'For any inquiries or support, feel free to email us at: <a href="mailto:support@chillsup.com" class="text-blue-500">support@chillsup.com</a>',
      },
      {
        title: 'Upload Your File',
        description:
          'Need to share something with us? Click below to upload your files directly.',
        icon: 'tabler:cloud-upload',
      },
    ]}
  />
</Layout>
